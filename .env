# Database Configuration
DB_HOST=postgres
DB_HOST_LOCAL=0.0.0.0

DB_PORT=5432
DB_NAME=clinical_trials_db
DB_USER=postgres
DB_PASSWORD=password

# PostgreSQL Configuration (for container initialization)
POSTGRES_DB=clinical_trials_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
