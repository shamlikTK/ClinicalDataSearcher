# Application Configuration
DATA_FILE=/app/data/clinical_trials.json
DOWNLOAD_LIMIT=10000
DUPLICATE_ACTION=update
SCHEDULE_INTERVAL_MINUTES=10

# Logging Configuration
LOG_LEVEL=INFO
